page{
  height: 100%
}
ec-canvas {
  width: 100%;
  height: 100%;
}
.ec-canvas{
  width: 80%!important;
  height: 80%!important;
  margin: 0 auto;
}
.tabBox{
  width: 76%;
  height: 76rpx;
  margin: 0 auto;
  border:6rpx solid #F8265D;
  border-radius:40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:0 10rpx;
  box-sizing: border-box;
}
.topBox{
  height: 20rpx;
}
.tabLeft,.tabRight{
  width: 50%;
  height: 80%;
  position: relative; 
  font-size: 24rpx;
  text-align: center;
  color: #787878;
  display: flex;
  align-items: center;
  justify-content: center;
}
.active{
  background: #F8265D;
  border-radius: 30rpx;
   color: #fff;
}
.tabLeft.active::before,.tabLeft.active::after,.tabRight.active::before,.tabRight.active::after{
  content: "";
  display: block;
  width: 6rpx;
  height: 6rpx;
  background: #fff;
  border:2rpx solid #CD1C4F;
  border-radius: 50%;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
}
.tabLeft.active::before,.tabRight.active::before{
  left: 20rpx;
}
.tabLeft.active::after,.tabRight.active::after{
  right: 20rpx;
}
.container{
  padding:0;
  height: 600rpx;
}