/* pages/Account/Account.wxss */
page{
  height: 100%;
}
.main{
  width: 100%;
  box-sizing: border-box;
  font-size:28rpx;
  line-height:52rpx;
  height: 100%;
}




.banner{
  width: 100%;
  height: 32%;
  position: relative;
}
.banner image{
  width: 100%;
  height: 100%;
}
.bannerZi{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.75);
}
.bannerZi image{
  width: 50%;
  height: 70%;
}
.bot{
  width: 100%;
  height: 40rpx;
  position: absolute;
  left: 0rpx;
  bottom: -4rpx;
}
.bot image{
  width: 100%;
  height: 100%;
}



.title{
  display: flex;
  align-items: center;
   margin-top: 20rpx;
   padding: 20rpx;
}
.iconBox{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-right: 10rpx;
}
.iconBox image{
  width: 100%;
  height: 100%;
  display:inherit;
}
.title>text:nth-child(2){
  font-weight: bold;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.title>text:nth-child(3){
  font-size: 22rpx;
  margin-right: 10rpx;
  color: #6D6F73;
}
.title>text:nth-child(4){
  font-size: 28rpx;
}

.table{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.table>view{
  border-bottom: 1rpx solid #f5f5f5;
  line-height:80rpx;
font-size:28rpx;
}
.table>view>text{
  float: right;
}
.main button{
  width:60%;
  line-height:2;
  margin:100rpx auto 0;
  background: #F8265D;
  color: #fff;
}
