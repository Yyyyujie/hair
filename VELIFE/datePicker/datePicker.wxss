.date-title{
    font-size: 32rpx;
    text-align: center;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #ddd;
}
.picker{
    width: 100%;
    height: 200px;
    font-size: 30rpx;
}
.item {
    line-height: 40px;
    height: 40px;
    text-align:center;
}
.ft{
    display: flex;
    text-align: center;
    height: 90rpx;
    line-height: 90rpx;
    border-top: 2rpx solid #ddd;
    font-size: 30rpx;
}
.btn{
    flex: 1;
}
.confirm{
    border-left: 2rpx solid #ddd;
}
.mask{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, .5);
    z-index: 100;
}